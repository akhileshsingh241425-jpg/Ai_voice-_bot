# Production Environment Variables for Hostinger
# Copy this to .env and fill in your values

# ============ DATABASE ============
MYSQL_HOST=localhost
MYSQL_USER=your_hostinger_db_user
MYSQL_PASSWORD=your_hostinger_db_password
MYSQL_DATABASE=ai_voice_bot_new
MYSQL_PORT=3306

# ============ FLASK ============
FLASK_ENV=production
SECRET_KEY=generate-a-strong-secret-key-here
WHISPER_MODEL_SIZE=small

# ============ CORS ============
# Your production domain (comma-separated for multiple)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============ FILE UPLOADS ============
MAX_CONTENT_LENGTH=52428800
